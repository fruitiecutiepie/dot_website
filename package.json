{
  "publisher": "ftctpi",
  "name": "dot-website",
  "displayName": "Dot Website",
  "version": "1.0.0",
  "description": "Embedded file-based browser in VS Code.",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.83.0"
  },
  "activationEvents": [
    "onOpenExternalUri:http",
    "onOpenExternalUri:https",
    "onDebugInitialConfigurations",
    "onDebug",
    "onLanguage:dot-website",
    "onFileSystem:vsls"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Dot Website",
        "command": "dot-website.open",
        "title": "Open New Website"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.openActiveFile",
        "title": "Open Active File in Preview"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.controls.refresh",
        "title": "Refresh Page",
        "icon": "$(refresh)"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.controls.external",
        "title": "Open page with system browser",
        "icon": "$(link-external)"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.controls.debug",
        "title": "Open DevTools",
        "icon": "$(tools)"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.controls.openSourceDocument",
        "title": "Open .website Source File",
        "icon": "$(file-code)"
      },
      {
        "category": "Dot Website",
        "command": "dot-website.controls.runDocument",
        "title": "Run .website Document",
        "icon": "$(run)"
      }
    ],
    "configuration": {
      "title": "Dot Website",
      "type": "object",
      "properties": {
        "dot-website.startUrl": {
          "description": "The default start url for new Dot Website instances",
          "type": "string"
        },
        "dot-website.chromeExecutable": {
          "description": "The full path to the executable, including the complete filename of the executable.\n\nCAUTION: Custom executables are not guaranteed to work.",
          "type": "string"
        },
        "dot-website.verbose": {
          "default": false,
          "description": "Toggles verbose logging",
          "type": "boolean"
        },
        "dot-website.debugHost": {
          "default": "localhost",
          "description": "Host name for debug",
          "type": "string"
        },
        "dot-website.debugPort": {
          "default": 9222,
          "description": "Port number for debug, when occupied, it will try to find another one by self bumpping.",
          "type": "number"
        },
        "dot-website.format": {
          "default": "png",
          "enum": [
            "png",
            "jpeg"
          ],
          "description": "The type of image used in rendering preview.",
          "type": "string"
        },
        "dot-website.ignoreHttpsErrors": {
          "default": true,
          "description": "Ignore HTTPS errors if you are using self-signed SSL certificates",
          "type": "boolean"
        },
        "dot-website.quality": {
          "default": 100,
          "description": "Image quality of screencasting",
          "type": "number"
        },
        "dot-website.everyNthFrame": {
          "default": 1,
          "description": "Skip for frames of screencasting",
          "type": "number"
        },
        "dot-website.localFileAutoReload": {
          "default": true,
          "description": "Automatically reload page on local file changes",
          "type": "boolean"
        },
        "dot-website.storeUserData": {
          "default": true,
          "description": "Store cookies, localStorage, etc. on disk, so that you don't lose them when you close session. This will help you not get logged out.",
          "type": "boolean"
        },
        "dot-website.proxy": {
          "description": "Add proxy parameters during initial loading of the browser.",
          "type": "string"
        },
        "dot-website.otherArgs": {
          "description": "Add other parameters during initial loading of the browser.",
          "type": "string"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "dot-website.editor",
        "displayName": "Website",
        "selector": [
          {
            "filenamePattern": "*.website"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "dot-website",
        "extensions": [
          ".website"
        ],
        "aliases": [
          "Dot Website"
        ]
      }
    ],
    "debuggers": [
      {
        "type": "dot-website",
        "label": "Dot Website",
        "configurationSnippets": [
          {
            "label": "Dot Website: Launch",
            "description": "Launch Dot Website to localhost",
            "body": {
              "type": "dot-website",
              "request": "launch",
              "name": "Dot Website: Launch",
              "url": "http://localhost:3000"
            }
          },
          {
            "label": "Dot Website: Attach",
            "description": "Attach to open Dot Website instances",
            "body": {
              "type": "dot-website",
              "request": "attach",
              "name": "Dot Website: Attach"
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "url": {
                "type": "string",
                "description": "Absolute url to launch",
                "default": "http://localhost:3000"
              },
              "webRoot": {
                "type": "string",
                "description": "This specifies the workspace absolute path to the webserver root. Used to resolve paths like `/app.js` to files on disk. Shorthand for a pathMapping for \"/\"",
                "default": "${workspaceFolder}"
              },
              "pathMapping": {
                "type": "object",
                "description": "A mapping of URLs/paths to local folders, to resolve scripts in Chrome to scripts on disk",
                "default": {
                  "/": "${workspaceFolder}"
                }
              },
              "trace": {
                "type": [
                  "boolean",
                  "string"
                ],
                "enum": [
                  "verbose",
                  true
                ],
                "default": true,
                "description": "When 'true', the debugger will log tracing info to a file. When 'verbose', it will also show logs in the console."
              },
              "sourceMapPathOverrides": {
                "type": "object",
                "description": "A set of mappings for rewriting the locations of source files from what the sourcemap says, to their locations on disk. See README for details.",
                "default": {
                  "webpack:///./*": "${webRoot}/*",
                  "webpack:///src/*": "${webRoot}/*",
                  "webpack:///*": "*",
                  "webpack:///./~/*": "${webRoot}/node_modules/*",
                  "meteor://ðŸ’»app/*": "${webRoot}/*"
                }
              }
            }
          },
          "attach": {
            "properties": {
              "urlFilter": {
                "type": "string",
                "description": "Will search for a page with this url and attach to it, if found. Can have * wildcards.",
                "default": ""
              },
              "webRoot": {
                "type": "string",
                "description": "This specifies the workspace absolute path to the webserver root. Used to resolve paths like `/app.js` to files on disk. Shorthand for a pathMapping for \"/\"",
                "default": "${workspaceFolder}"
              },
              "pathMapping": {
                "type": "object",
                "description": "A mapping of URLs/paths to local folders, to resolve scripts in Chrome to scripts on disk",
                "default": {
                  "/": "${workspaceFolder}"
                }
              },
              "trace": {
                "type": [
                  "boolean",
                  "string"
                ],
                "enum": [
                  "verbose",
                  true
                ],
                "default": true,
                "description": "When 'true', the debugger will log tracing info to a file. When 'verbose', it will also show logs in the console."
              },
              "sourceMapPathOverrides": {
                "type": "object",
                "description": "A set of mappings for rewriting the locations of source files from what the sourcemap says, to their locations on disk. See README for details.",
                "default": {
                  "webpack:///./*": "${webRoot}/*",
                  "webpack:///src/*": "${webRoot}/*",
                  "webpack:///*": "*",
                  "webpack:///./~/*": "${webRoot}/node_modules/*",
                  "meteor://ðŸ’»app/*": "${webRoot}/*"
                }
              }
            }
          }
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder && resourceExtname == .website",
          "command": "dot-website.controls.openSourceDocument",
          "group": "dot-website"
        }
      ],
      "editor/title": [
        {
          "when": "resourceScheme == webview-panel && dot-website-active",
          "command": "dot-website.controls.external",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == webview-panel || resourceScheme == file && dot-website-active && !dot-website-debug-active",
          "command": "dot-website.controls.debug",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == webview-panel && dot-website-active && activeEditor != activeCustomEditorId",
          "command": "dot-website.controls.openSourceDocument",
          "group": "navigation"
        },
        {
          "when": "editorLangId == dot-website && !dot-website-active",
          "command": "dot-website.controls.runDocument",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "dot-website.controls.external",
          "when": "false"
        },
        {
          "command": "dot-website.controls.debug",
          "when": "false"
        },
        {
          "command": "dot-website.controls.openSourceDocument",
          "when": "false"
        },
        {
          "command": "dot-website.controls.runDocument",
          "when": "editorLangId == dot-website"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "walkthrough",
        "title": "Get Started with Dot Website",
        "description": "Reduce context switching and stay focused in a single environment with embedded browser.",
        "steps": [
          {
            "id": "dot-website.walkthrough.step_1",
            "title": "Optimize your browser workflow",
            "description": "Manage your web resources in a streamlined way. You're only one click away from optimizing your DX.\n[Create a .website File](command:dot-website.walkthrough.step_1)",
            "media": {
              "markdown": "./assets/walkthrough/step_1.md"
            }
          },
          {
            "id": "dot-website.walkthrough.step_2",
            "title": "Open a new website",
            "description": "Quickly launch a new tab with your desired website by opening the command palette.",
            "media": {
              "markdown": "./assets/walkthrough/step_2.md"
            }
          },
          {
            "id": "dot-website.walkthrough.step_3",
            "title": "Preview your websites",
            "description": "See your website hot reload in VS Code.",
            "media": {
              "markdown": "./assets/walkthrough/step_3.md"
            }
          },
          {
            "id": "dot-website.walkthrough.step_4",
            "title": "Debug websites",
            "description": "Use DevTools within VS Code for efficient website inspection and debugging.",
            "media": {
              "markdown": "./assets/walkthrough/step_4.md"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "build:dev": "vite build && pnpm build:ts",
    "build": "rimraf dist && vite build && pnpm build:ts --minify",
    "build:ts": "tsup src/extension.ts --external=vscode -d dist",
    "publish": "vsce publish --no-dependencies --allow-missing-repository",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "install_extension": "pnpm build && pnpm package && node install_extension.js",
    "lint": "eslint .",
    "release": "bumpp",
    "pretest": "pnpm build",
    "test": "node ./out/test/main.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.0.0-beta.27",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.6",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^18.2.13",
    "@types/vscode": "1.83.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.21.1",
    "browser-viewport-device-descriptions": "^1.1.0",
    "bumpp": "^9.2.0",
    "conventional-github-releaser": "^3.1.5",
    "element-to-source": "^1.0.1",
    "eslint": "^8.51.0",
    "event-emitter-enhancer": "^2.0.0",
    "eventemitter2": "^6.4.9",
    "find-up": "^6.3.0",
    "lodash": "^4.17.21",
    "ovsx": "^0.8.3",
    "puppeteer": "^23.4.0",
    "re-resizable": "^6.9.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "preview": true,
  "extensionKind": [
    "ui",
    "workspace"
  ]
}
